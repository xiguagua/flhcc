---
import { getCollection, getEntry, render } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import Link from "@components/Link.astro";

export async function getStaticPaths() {
  const apps = (await getCollection("apps"))
    .filter(({ data }) => !data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

  return apps.map((app) => ({
    params: { id: app.id },
    // props: app,
  }));
}
// type Props = CollectionEntry<'apps'>;

const params = Astro.params;
const app = await getEntry("apps", params.id);
if (!app) {
  throw new Error(`Could not find ${params.id}`);
}
const { Content } = await render(app);
const appdata = app.data;

// const app = Astro.props;
---

<PageLayout title={appdata.title} description={appdata.description} image={appdata.appIcon} keywords={appdata.keywords}>
  <Container>
    <div class="animate">
      <BackToPrev href="/apps"> Back to apps </BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={appdata.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {app.body && readingTime(app.body)}
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {appdata.title}
      </div>
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>
