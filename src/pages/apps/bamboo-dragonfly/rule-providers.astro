        placeholder="æœç´¢è§„åˆ™..." 
      />
    </div>

    <div class="flex flex-col space-y-5">
      <div class="provider-section">
        <h2 class="text-black dark:text-white text-md font-semibold mb-2">WORLD:</h2>
        <div class="animate grid grid-cols-2 sm:grid-cols-3 gap-3">
          {
            items.world.map((item) => {
              const fullName = item.name;
              const shortName = getPrefix(fullName); // sth before '-'
              const clearName = shortName.replace(/\+$/, "");
              const link = new URL(`https://link.flhcctech.com/rule-providers/${shortName}`);
              link.searchParams.set('url', `${urlPrefix}/${clearName}/${clearName}.list`);
              link.searchParams.set('format', item.format);
              link.searchParams.set('content', item.content);
              link.searchParams.set('policy', item.policy);
    
              return (
                <a href={link} class="provider-card" data-name={fullName.toLowerCase()}>
                  <div class="text-neutral-700 dark:text-neutral-300 border border-black/5 dark:border-white/10 rounded-2xl bg-white/50 dark:bg-white/10 backdrop-blur-md px-3 py-3 text-sm truncate hover:scale-[1.02] hover:bg-white/80 dark:hover:bg-white/20 active:scale-95 transform transition">
                    {fullName}
                  </div>
                </a>
              );
            })
          }
        </div>
      </div>
      <div class="provider-section">
        <h2 class="text-black dark:text-white text-md font-semibold mb-2">CN:</h2>
        <div class="animate grid grid-cols-2 sm:grid-cols-3 gap-3">
          {
            items.cn.map((item) => {
              const fullName = item.name;
              const shortName = getPrefix(fullName); // sth before '-'
              const clearName = shortName.replace(/\+$/, "");
              const link = new URL(`https://link.flhcctech.com/rule-providers/${shortName}`);
              link.searchParams.set('url', `${urlPrefix}/${clearName}/${clearName}.list`);
              link.searchParams.set('format', item.format);
              link.searchParams.set('content', item.content);
              link.searchParams.set('policy', item.policy);
    
              return (
                <a href={link} class="provider-card" data-name={fullName.toLowerCase()}>
                  <div class="text-neutral-700 dark:text-neutral-300 border border-black/5 dark:border-white/10 rounded-2xl bg-white/50 dark:bg-white/10 backdrop-blur-md px-3 py-3 text-sm truncate hover:scale-[1.02] hover:bg-white/80 dark:hover:bg-white/20 active:scale-95 transform transition">
                    {fullName}
                  </div>
                </a>
              );
            })
          }
        </div>
      </div>
    </div>
    
  </Container>
</PageLayout>

<script>
  function initSearch() {
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const searchContainer = document.getElementById('search-container');
    const searchToggle = document.getElementById('search-toggle');
    const sections = document.querySelectorAll('.provider-section');

    if (searchToggle && searchContainer && searchInput) {
      // ä½¿ç”¨ cloneNode(true) æ›¿æ¢å…ƒç´ ä»¥æ¸…é™¤æ‰€æœ‰æ—§çš„äº‹ä»¶ç›‘å¬å™¨
      // è¿™æ˜¯å¤„ç† View Transitions å¯¼è‡´é‡å¤ç»‘å®šçš„æœ€ç¨³å¥æ–¹æ³•
      const newToggle = searchToggle.cloneNode(true);
      searchToggle.parentNode?.replaceChild(newToggle, searchToggle);
      
      const newInput = searchInput.cloneNode(true);
      searchInput.parentNode?.replaceChild(newInput, searchInput);

      // é‡æ–°è·å–æ›¿æ¢åçš„å…ƒç´ å¼•ç”¨
      const finalToggle = document.getElementById('search-toggle');
      const finalInput = document.getElementById('search-input') as HTMLInputElement;

      if (finalToggle && finalInput) {
        finalToggle.addEventListener('click', (e) => {
            e.preventDefault(); // é˜²æ­¢å¯èƒ½çš„é»˜è®¤è¡Œä¸º
            const isHidden = searchContainer.classList.toggle('hidden');
            if (!isHidden) {
              finalInput.focus();
            }
        });

        finalInput.addEventListener('input', (e) => {
          const term = (e.target as HTMLInputElement).value.toLowerCase();
          
          sections.forEach(section => {
            const cards = section.querySelectorAll('.provider-card');
            let hasVisibleCards = false;

            cards.forEach(card => {
                const el = card as HTMLElement;
                const name = el.dataset.name || '';
                
                if (name.includes(term)) {
                    el.style.display = '';
                    hasVisibleCards = true;
                } else {
                    el.style.display = 'none';
                }
            });

            // åˆ‡æ¢ç« èŠ‚æ˜¾ç¤ºçŠ¶æ€
            (section as HTMLElement).style.display = hasVisibleCards ? '' : 'none';
          });
        });
      }
    }
  }

  // ç«‹å³è¿è¡Œä¸€æ¬¡ï¼ˆé’ˆå¯¹ç¡¬åˆ·æ–°ï¼‰
  initSearch();

  // ç›‘å¬ Astro é¡µé¢åŠ è½½äº‹ä»¶ï¼ˆé’ˆå¯¹è½¯å¯¼èˆªï¼‰
  document.addEventListener('astro:page-load', initSearch);
</script>